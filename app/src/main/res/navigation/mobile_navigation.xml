<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_scanner">

    <fragment
        android:id="@+id/navigation_scanner"
        android:name="com.example.praypay.Scanner"
        android:label="@string/scanner"
        tools:layout="@layout/fragment_scanner" />
    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.praypay.Cart"
        android:label="@string/cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.praypay.Account"
        android:label="@string/account"
        tools:layout="@layout/fragment_account" />
</navigation>